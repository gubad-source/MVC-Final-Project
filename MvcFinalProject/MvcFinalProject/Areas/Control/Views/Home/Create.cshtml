@model HomeBlogItem
<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-lg-6 ml-5">
            <form method="post" asp-action="Create" asp-controller="Home" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <textarea id="Title" asp-for="@Model.Title" name="Title" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Content">Content</label>
                        <textarea id="Content" asp-for="@Model.Content" name="Content" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Label">Label</label>
                        <textarea id="Label" name="Label" asp-for="@Model.Label" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="Photo">Photo</label>
                        <input asp-for="@Model.File" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-primary">Əlavə et</button>
                </div>
            </form>
        </div>
    </div>
</div>


